programa {
	funcao inicio() {
		
		/*3. Faça um Programa que leia 4 notas, mostre      
		as notas e a média na tela. */ 
		
		inteiro notas [4]
		inteiro media
		
		para(inteiro i = 0; i < 4; i++){
		    escreva("escreva sua nota: ")
		    leia(notas[i])
		    limpa()
		}
		
		
		para(inteiro i = 0; i < 4; i++){
		    escreva( " nota: " ,i + 1,": ", notas[i], "\n\n")
		}
		
	
		
		escreva("sua média é: ", (notas[0] + notas[1] + notas[2] + notas[3]) /4, "\n" )
		
	}
}
