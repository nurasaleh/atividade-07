programa {
	funcao inicio()
	
	/*13. Escreva um algoritmo que gerencia uma lista de convidados para uma festa de geeks, nerds
      e cosplayers. Seu programa deve cadastrar, remover e exibir a lista de convidados. Serão
      somente 100!*/

{
		
		cadeia c1 [100]
        inteiro op = 0
        
        para (inteiro i = 0; i < 100; i++) {
            c1[i] = ""
        }
        
        faca{
            
            limpa()
            
            escreva("=========== Menu ===========\n")
            escreva("Cadastrar convidado   [1] \n")
            escreva("Excluir convidado     [2] \n")
            escreva("Lista de convidados   [3] \n")
            escreva("Sair                  [4] \n")
            escreva("=============================\n")
            
            escreva("escreva: ")
            leia(op)
            
            escolha(op){
                
                caso 1:
                    
                    limpa()
                    
                    cadeia nome
                    
                    escreva("escreva o nome do convidado: ")
                    leia(nome)
                    
                    para(inteiro i = 0; i < 100; i++){
                        se(c1[i] == ""){
                            c1[i] = nome
                            pare
                        }
                    }
                    
                pare
                
                caso 2:
                
                    limpa()
                
                    escreva("========Lista de convidados====== \n")
                    para(inteiro c = 0; c< 100; c++){
                        se(c1[c] != ""){
                            escreva("\nConvidado Nº ",c + 1," - ", c1[c])
                        }
                    }
                
                    inteiro r = 0
                
                    escreva("\n\nDigite o número de quem vc deseja excluir: ")
                    leia(r)
                    r--
                
                    c1[r] = ""
                
                pare
                
                caso 3: 
                
                    limpa()
                
                    escreva("*Lista de convidados* \n")
                    para(inteiro c = 0; c< 100; c++){
                        se(c1[c] != ""){
                            escreva("\nConvidado Nº ",c + 1," - ", c1[c])
                            
                        }
                    }
                    
                    cadeia conf
                    
                    escreva("\n\nPara prosseguir digite qualque coisa: ")
                    leia(conf)
                    
                pare
                
                caso 4: 
                
                    limpa()
                    escreva("adeus")
                
                pare
                
                caso contrario: 
                    escreva("\nApenas digite valores informados da tabela: ")
                    leia(op)
                pare
            }
            
        }enquanto(op != 4)
        
        escreva("\nFim do programa")
        
	}
}
